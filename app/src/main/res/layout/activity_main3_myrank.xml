<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    tools:context = ".offline.MainActivity"
    android:background="#79D5FA">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Thành tích của bạn"
        android:textColor="#0A0B0A"
        android:textSize="30dp"
        android:layout_marginTop = "40dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewbac"
        android:layout_centerHorizontal="true"
        android:text="Bạc"
        android:textColor="#0A0B0A"
        android:textSize="20dp"
        android:layout_marginTop = "5dp"/>


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageViewbac"
        android:src="@drawable/silver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "100dp"/>
    <TextView
        android:id="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:text="250 điểm"
        android:textColor="#0A0B0A"
        android:textSize="25dp"
        android:layout_marginTop = "2dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView2"
        android:text="Xếp hạng thành tích:"
        android:textColor="#0A0B0A"
        android:textSize="30dp"
        android:layout_marginTop = "20dp"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView3"
        android:text="Đồng: từ 0 đến 250 điểm"
        android:textColor="#4C504C"
        android:textSize="20dp"
        android:layout_marginTop = "20dp"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView4"
        android:text="Bạc: từ 250 đến 500 điểm"
        android:textColor="#4C504C"
        android:textSize="20dp"
        android:layout_marginTop = "10dp"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView5"
        android:text="Vàng: từ 500 đến 700 điểm"
        android:textColor="#4C504C"
        android:textSize="20dp"
        android:layout_marginTop = "10dp"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView6"
        android:text="Kim cương: từ 750 đến 1000 điểm"
        android:textColor="#4C504C"
        android:textSize="20dp"
        android:layout_marginTop = "10dp"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView7"
        android:text="Cao thủ: trên 1000 điểm"
        android:textColor="#4C504C"
        android:textSize="20dp"
        android:layout_marginTop = "10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/button3_1"
        android:layout_below="@+id/textView8"
        android:layout_marginTop = "80dp"
        android:layout_toLeftOf="@+id/imageViewbac"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button3_2"
        android:layout_below="@+id/textView8"
        android:layout_marginTop = "80dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/imageViewbac"
        />

</RelativeLayout>