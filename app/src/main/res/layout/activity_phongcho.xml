<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79D5FA"
    android:orientation="vertical"
    tools:context=".online.Online_PhongCho">

    <ImageButton
        android:id="@+id/imagebutton1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:src="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/imagebutton2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_baseline_home_24"
        android:src="@drawable/ic_baseline_home_24" />

    <TextView
        android:id="@+id/tvRoomID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:background="@drawable/vien"
        android:focusable="true"
        android:gravity="center"
        android:hint="ID phòng"
        android:inputType="text"
        android:maxLines="1"
        android:text="232232"
        android:textColor="#171617"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="136dp"
        android:text="copy"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvUserA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Taido"
        android:textColor="#0A0B0A"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="VS"
        android:textColor="#0A0B0A"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvUserB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Đang chờ đối thủ"
        android:textColor="#0A0B0A"
        android:textSize="35dp" />

    <Button
        android:id="@+id/btnBatDau"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:enabled="false"
        android:text="Chiến thôi"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSanSang"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:text="Sẵn sàng"
        android:textSize="16dp"
        android:visibility="invisible" />
</RelativeLayout>